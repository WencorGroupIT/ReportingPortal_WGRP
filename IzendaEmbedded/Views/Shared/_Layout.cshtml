@using System.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Underscore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .adnavbar {
            overflow: hidden;
            background-color: #333;  
            position: fixed !important;
            bottom: 0;
            width: 100%;
        }

        .navbar a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .adnavbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .adnavbar a.active {
            background-color: #4CAF50;
            color: white;
        }

        .adnavbar .icon {
            display: none;
        }

        .adnavbar.responsive a {
            float: none;
            display: block;
            text-align: left;
        }

    </style>
    @* #izenda *@

    @* Apply css based on the users tenant *@
    <link href="~/Scripts/izenda/izenda-ui.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid" style="padding-right: 2px !important; padding-left: 2px !important;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
   

    @* #izenda *@
    <script src="~/Scripts/alertify.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    @*@Scripts.Render("~/bundles/izenda")*@
    <script src="~/Scripts/izenda/izenda_common.js"></script>
    <script src="~/Scripts/izenda/izenda_locales.js"></script>
    <script src="~/Scripts/izenda/izenda_vendors.js"></script>
    <script src="~/Scripts/izenda/izenda_ui.js"></script>
    <script src="~/Scripts/izenda.integrate.js"></script>
    <script src="~/Scripts/izenda.utils.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var izendaApiUrl = '@ConfigurationManager.AppSettings.Get("IzendaApiUrl")';
            DoIzendaConfig(izendaApiUrl);
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="dropdown"]').dropdown();
        });

    </script>
    <script>

    </script>

    @if (ViewBag.SystemAdmin && Request.IsAuthenticated)
    {

        <div class="adnavbar" id="myNavbar">
            <a href='@Url.Action("Parse","ActiveDirectory")' style="color: aliceblue; font-size: 20px">Active Directory</a>
            
        </div>

    }


</body>
</html>